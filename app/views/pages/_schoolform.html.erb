      <li>
        <%= f.label :street %>
        <%= f.text_field :street %>
 
        <%= f.label :city %>
        <%= f.text_field :city %>
        
        <%= f.label :state %>
        <%= f.text_field :state %>

        <%= f.label :postcode %>
        <%= f.number_field :postcode %>

        <%= f.label :country %>
        <%= f.text_field :country %>

      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>